@model MVCProjectBatch5.Models.Class1
@{
    ViewBag.Title = "AddEmp";
}

<style>
    .error {
        color: #ff0000
    }
</style>

<h2>AddEmp</h2>

@using (Html.BeginForm("AddEmp", "Home", FormMethod.Post))
{
    <!--@Html.TextBoxFor(m=>m.Id)-->
    @Html.HiddenFor(m => m.Id)

    <div class="form-group form-control">
        <label>Name</label>
        @Html.TextBoxFor(m => m.Name, new { @class = "form-group" })
        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Email</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Mobile</label>
        @Html.TextBoxFor(m => m.Mobile, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Address</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Address, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Sal</label>
        @Html.TextBoxFor(m => m.Sal, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Sal, "", new { @class = "error" })
    </div>
    <div class="form-group form-control">
        <label>Zipcode</label>
        @Html.TextBoxFor(m => m.Zipcode, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Zipcode, "", new { @class = "error" })
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Emp</button>
    <button type="reset" class="btn btn-secondary">Re-set</button>
}
